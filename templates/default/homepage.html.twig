{% extends "base.html.twig" %}

{% block body_id "homepage" %}

{% block body %}


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="navbar-brand mb-0 h1" style="width:20%;">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  </div>

  <div class="d-flex collapse navbar-collapse " id="navbarSupportedContent">

   <form class="form-inline my-2 my-lg-0 p-2 flex-fill" id="searchItemForm">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="searchItem">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> <br/>

      <div id="searchResults">

      </div>
    </form>

    <ul class="navbar-nav mr-auto p-2 flex-fill" >
      {% if(is_granted("IS_AUTHENTICATED_FULLY")) %}
     
      <li class="nav-item">
          <a class="nav-link" href="{{path('user_profile')}}"> 

          {% if(app.user.avatar) %}

          <img src="{{app.user.avatar.finalPath}}" style="width:30px;height:30px;" class="rounded-circle" />

          {% endif %}

          {{ app.user.username }} 
          </a>
      </li>

      <li>
          <a class="nav-link" href="{{path('app_logout')}}"> Logout </a>
      </li>

      <li>
          <a class="nav-link" href="{{path('product_new')}}"> product </a>
      </li>

      {% else %}
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_login')}}"> Login <span class="sr-only">(current)</span></a>
      </li>

       <li class="nav-item">
        <a class="nav-link" href="{{path('app_register')}}">Register</a>
      </li>

       {% endif %}

      <li class="nav-item"> 
           <a class="nav-link" id="listCart">

           {% if is_granted("IS_AUTHENTICATED_FULLY") %}

          {% if( nCart > 0 ) %}

           <span class="nCart"> {{ nCart }}  </span>

           {% endif %}

           {% endif %}

            <i class="fas fa-shopping-cart mr-3">
           
           </i>
           </a>
      </li>

      <li class="nav-item">
           <a class="nav-link" id="whishlists">

           {% if is_granted("IS_AUTHENTICATED_FULLY") %}

           {% if nWishlist > 0 %}


           <span class="nwishlist"> {{ nWishlist }} </span>

           {% endif %}

           {% endif %}
           
            <i class="fas fa-heart">
            
            </i> 
            
            </a>
      </li>

      {% if is_granted("IS_AUTHENTICATED_FULLY") %}

      {% if(app.user.shops | length > 0) %}

      {% if(app.user.shops | length > 1) %}

      {% for shop in app.user.shops %}

      <p> {{shop}} </p>

      {% endfor %}

      {% else %}

       {% for shop in app.user.shops %}
       
       <li class="nav-item">
           <a class="nav-link" href="{{path('shop_show', {'id': shop.id}) }}">  {{ shop.name }} </a>
       </li>

       {% endfor %}

       {% endif %}

       {% else %}

       <li class="nav-item">
           <a class="nav-link" href="{{path('shop_new')}}" id="my-shop">  my shop </a>
       </li>

       {% endif %}

       {% endif %}

    </ul>
  </div>
</nav>

<nav class="navbar fixed-bottom navbar-light bg-light">
  <a class="navbar-brand" href="#">Fixed bottom</a>
</nav>

<div class="container">
    <div class="row">
    {% for product in products %}

    {% set prod = product.getCart(loop.index) %}

    <div class="col-md-3">

    <div class="card card-cascade card-ecommerce wider" data-product-id="{{product.Id}}">

  <div class="card-body card-body-cascade text-center">

    <a class="productItem" />

    <img src="{{product.productImage.finalPath}}" class="card-img-top" alt="...">
     

    <h4> {{ product.category.name }} </h4>

    <h5 class="card-title">{{ product.name }}</h5> 
    <p class="card-text"> {{ product.description }} </p>

    </a>
    
    <ul class="nav rating">
      <li class="star-product" data-star="1"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="2"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="3"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="4"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="5"><i class="far fa-star"></i></li>
    </ul>
    
   <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
  </div>

  <div class="card-footer">
      <span class="float-left"> {{product.price}} </span>
      <span class="float-right"> 
      
      <a data-toggle="tooltip" data-placement="top" title="Add to Cart" {% if product.cart is not null %} style="{{app.user == product.cart.client  ? 'color:blue' : '' }}" data-cart-id="{{product.cart.id}}" {% endif %} data-product="" class="add-cart">
      <i class="fas fa-shopping-cart mr-3"></i>
      </a>
        <a data-toggle="tooltip" data-placement="top" title="Share"><i class="fas fa-share-alt mr-3"></i></a>
        <a class="active add-whishlist" data-toggle="tooltip" data-placement="top" title="Added to Wishlist" style=" {% if product.whishlist is not null %} {{ app.user == product.whishlist.customer ? 'color:green': ''}} {% endif %}">
        <i class="fas fa-heart">
        </i></a>
    
      </span>
    </div>
  </div>
  </div>

    {% endfor %}
 
  <div id="root">  </div>
  </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" width="90%">
  <div class="modal-dialog modal-lg " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modalCartBody">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

{% include '/modal/whishlists.html.twig'%}

{% include '/modal/product_item.html.twig' %}

{% endblock %}