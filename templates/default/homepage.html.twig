<div class="container">
    <div class="row products-wrapper">
    {% for product in products %}

    <div class="col-md-3 product-item-wrapper">

    <div class="card card-cascade card-ecommerce wider product-item product-container" data-product-id="{{product.Id}}" {% if app.user == product.client %} data-author="{{product.client.id}}" {% endif %}>

  <div class="card-body card-body-cascade text-center">

    <a class="productItem cursor-pointer" />

    {% set img = product.productImages|first %}

    <img src="{{img ? img.finalPath}}" class="card-img-top" alt="...">
     

    <h5 class="card-title">{{ product.name }}</h5> 
    <h6> {{ product.category.name }} </h6>
    <!--<p class="card-text"> {{ product.description }} </p> -->

    </a>
    
    <ul class="nav rating">

      <!-- showing the rating stars -->

      {% for i in 1..5 %}

      {% if product.stars|length > 0 %}

      {% for star in product.stars %}

      <li class="star-product" data-star-id="{{star.id}}" data-star="{{i}}" data-max="{{ star.value >= i ? star.value : ''}}">
      
      {% if star.value >= i %}
      
      <i class="fas fa-star cursor-pointer"></i> 
      
       {% else %}

       <i class="far fa-star cursor-pointer"></i></li>

       {% endif %}
       
       </li>

      {% endfor %}

      {% else %}

      <li class="star-product" data-star="{{i}}"><i class="far fa-star cursor-pointer"></i></li>

      {% endif %}

      {% endfor %}
    </ul>
    
   
  </div>

  <div class="card-footer">
      <span class="float-left product-price"> {{product.price}} </span>
      <span class="float-right"> 
      
      <a class="add-cart" data-toggle="tooltip" data-placement="top" title="Add to Cart" {% if product.carts is not null %} {% for cart in product.carts %} {% if app.user == cart.client %}   style="color:blue" data-cart-id="{{cart.id}}" {% endif %} {% endfor %} {% endif %} >
      <i class="fas fa-shopping-cart mr-3 cursor-pointer"></i>
      </a>
        <a data-toggle="tooltip" data-placement="top" title="Share" class="share-product">
        <i class="fas fa-share-alt mr-3 cursor-pointer"></i></a>
        <a class="active add-whishlist" data-toggle="tooltip" data-placement="top" title="Added to Wishlist" {% if product.whishlists is not null %} {% for whishlist in product.whishlists %} {% if app.user == whishlist.customer %} style="color:green" data-whishlist-id="{{whishlist.id}}" {% endif %} {% endfor %} {% endif %}>
        <i class="fas fa-heart cursor-pointer">
        </i></a>
    
      </span>
