{% extends "base.html.twig" %}

{% block body_id "homepage" %}

{% block body %}


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="navbar-brand mb-0 h1" style="width:20%;">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  </div>

  <div class="d-flex collapse navbar-collapse " id="navbarSupportedContent">

   <form class="form-inline my-2 my-lg-0 p-2 flex-fill">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>

    <ul class="navbar-nav mr-auto p-2 flex-fill" >
      {% if(is_granted("IS_AUTHENTICATED_FULLY")) %}
     
      <li class="nav-item">
          <a class="nav-link" href="{{path('user_profile')}}"> 

          {% if(app.user.avatar) %}

          <img src="{{app.user.avatar.finalPath}}" style="width:30px;height:30px;" class="rounded-circle" />

          {% endif %}

          {{ app.user.username }} 
          </a>
      </li>

      <li>
          <a class="nav-link" href="{{path('app_logout')}}"> Logout </a>
      </li>

      <li>
          <a class="nav-link" href="{{path('product_new')}}"> product </a>
      </li>

      {% else %}
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_login')}}"> Login <span class="sr-only">(current)</span></a>
      </li>

       <li class="nav-item">
        <a class="nav-link" href="{{path('app_register')}}">Register</a>
      </li>

       {% endif %}

      <li class="nav-item"> 
           <a class="nav-link" href=""> <i class="fas fa-shopping-cart mr-3"></i></a>
      </li>

      <li class="nav-item">
           <a class="nav-link" href=""> <i class="fas fa-heart"></i> </a>
      </li>

      {% if is_granted("IS_AUTHENTICATED_FULLY") %}

      {% if(app.user.shops | length > 0) %}

      {% if(app.user.shops | length > 1) %}

      {% for shop in app.user.shops %}

      <p> {{shop}} </p>

      {% endfor %}

      {% else %}

       {% for shop in app.user.shops %}
       
       <li class="nav-item">
           <a class="nav-link" href="{{path('shop_show', {'id': shop.id}) }}">  {{ shop.name }} </a>
       </li>

       {% endfor %}

       {% endif %}

       {% else %}

       <li class="nav-item">
           <a class="nav-link" href="{{path('shop_new')}}">  my shop </a>
       </li>

       {% endif %}

       {% endif %}

    </ul>
  </div>
</nav>

<nav class="navbar fixed-bottom navbar-light bg-light">
  <a class="navbar-brand" href="#">Fixed bottom</a>
</nav>

<div class="container">
    <div class="row">
    {% for product in products %}

    <div class="col-md-4">

    <div class="card card-cascade card-ecommerce wider" >
  <img src="{{product.productImage.finalPath}}" class="card-img-top" alt="...">
  <div class="card-body card-body-cascade text-center">
     

    <h4> {{ product.category.name }} </h4>

    <h5 class="card-title">{{ product.name }}</h5> 
    <ul class="nav rating">
      <li><i class="fas fa-star"></i></li>
      <li><i class="fas fa-star"></i></li>
      <li><i class="fas fa-star"></i></li>
      <li><i class="fas fa-star"></i></li>
      <li><i class="far fa-star"></i></li>
    </ul>
    <p class="card-text"> {{ product.description }} </p>
   <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
  </div>

  <div class="card-footer">
      <span class="float-left"> {{product.price}} </span>
      <span class="float-right"> 
      
      <a data-toggle="tooltip" data-placement="top" title="Add to Cart" id="cart" class="add-cart"><i class="fas fa-shopping-cart mr-3"></i></a>
        <a data-toggle="tooltip" data-placement="top" title="Share"><i class="fas fa-share-alt mr-3"></i></a>
        <a class="active" data-toggle="tooltip" data-placement="top" title="Added to Wishlist" class="add-whishlist"><i class="fas fa-heart"></i></a>
    
      </span>
    </div>
  </div>
  </div>

    {% endfor %}
 
  <div id="root">  </div>
  </div>

</div>

{% endblock %}