{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PhoneNumber</th>
                <th>Country</th>
                <th>City</th>
                <th>Street</th>
                <th>PostalCode</th>
                <th>FullName</th>
                <th>Instructions</th>
                <th>CareOf</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.phoneNumber }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.postalCode }}</td>
                <td>{{ address.fullName }}</td>
                <td>{{ address.instructions }}</td>
                <td>{{ address.careOf }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}
