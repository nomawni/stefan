{% extends 'base.html.twig' %}

{% block title %}CommentRating index{% endblock %}

{% block body %}
    <h1>CommentRating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Action</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment_rating in comment_ratings %}
            <tr>
                <td>{{ comment_rating.id }}</td>
                <td>{{ comment_rating.action }}</td>
                <td>
                    <a href="{{ path('comment_rating_show', {'id': comment_rating.id}) }}">show</a>
