
<!-- Modal -->
<div class="modal fade" id="productItemModal" tabindex="-1" role="dialog" aria-labelledby="productItemModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="productItemModalTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      <div class="product-item">

       <img src="" alt="" id="productItemImg"/>
      </div>

      <div id="productDetail">

       <p> Price: <span class="item-price"> </span> </p>

       <p> Size: <span class="item-size"> </span> </p>

       <p> Quantity <span class="item-quantity"> </span> </p>

       <p id="productItemDescription">  </p>

      </div>

       <ul class="nav rating">
      <li class="star-product" data-star="1"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="2"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="3"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="4"><i class="fas fa-star"></i></li>
      <li class="star-product" data-star="5"><i class="far fa-star"></i></li>
    </ul>

      <button type="button" class="btn btn-primary"> buy now </button>
      <button type="button" class="btn btn-success"> add to cart </button>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>