<!-- Modal -->
<div class="modal fade" id="shopModal" tabindex="-1" role="dialog" aria-labelledby="shopModalTitle" aria-hidden="true" width="90%">
  <div class="modal-dialog modal-lg " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shopModalTitle">Your shop</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="shopModalBody" style="padding:50px;">

      <div id="displayShopInfo">

      <h1 class="shopName"> </h1>

      <P class="shopCategory"> </p>
      <P class="shopCountry"> </p>
      <P class="shopCity"> </p>
      <P class="shopStreet"> </p>
      <P class="shopPostalCode"> </p>
      <P class="shopEmail"> </p>
      <P class="shopPhoneNumber"> </p>
      <P class="shopWebsite"> </p>

      <button class="btn btn-primary edit-shop"> Edit </button>
      <button class="btn btn-secondary new-shop"> Create </button>
      <button class="btn btn-danger delete-shop"> Delete </button> 
      
      </div>
        
      <form id="shopForm" method="post" >
          <div class="form-group row">
              <input type="text" name="name" id="shopName" class="form-control" placeholder="name" />
          </div>
          
          <div class="form-group row">
              <input type="text" name="shopCategory" id="shopCategory"  class="form-control name" placeholder="shop category" />
          </div>

          <div class="form-group row">
              <input type="text" name="country" id="country" class="form-control" placeholder="country" />
          </div>

           <div class="form-group row">
              <input type="text" name="city" id="city" class="form-control" placeholder="city" />
          </div>

          <div class="form-group row">
              <input type="text" name="street" id="street" class="form-control" placeholder="shop street" />
          </div>

          <div class="form-group row">
              <input type="text" name="postalCode" id="postalCode" class="form-control" placeholder="postal Code" />
          </div>

          <div class="form-group row">
              <input type="text" name="website" id="website" class="form-control" placeholder="website" />
          </div>

          <div class="form-group row">
              <input type="email" name="email" id="email" class="form-control" placeholder="email" />
          </div>

          <div class="form-group row">
              <input type="text" name="phoneNumer" id="phoneNumer" class="form-control" placeholder="phone numer" />
          </div>

          </form>

          <div id="symfonyForm">

          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary submit-form">Save</button>
      </div>
    </div>
  </div>
</div>