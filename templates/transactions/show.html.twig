{% extends 'base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
    <h1>Transactions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ transaction.currency }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ transaction.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transactions_index') }}">back to list</a>

    <a href="{{ path('transactions_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transactions/_delete_form.html.twig') }}
{% endblock %}
