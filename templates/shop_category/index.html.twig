{% extends 'base.html.twig' %}

{% block title %}ShopCategory index{% endblock %}

{% block body %}
    <h1>ShopCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop_category in shop_categories %}
            <tr>
                <td>{{ shop_category.id }}</td>
                <td>{{ shop_category.name }}</td>
                <td>
                    <a href="{{ path('shop_category_show', {'id': shop_category.id}) }}">show</a>
                    <a href="{{ path('shop_category_edit', {'id': shop_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shop_category_new') }}">Create new</a>
{% endblock %}
